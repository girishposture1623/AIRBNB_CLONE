<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>Registration Form</h1>
    <form method="post">
      <label for="Fullname"
        >Fullname :
        <input
          id="Fullname"
          type="text"
          autocapitalize="15"
          required
          placeholder="Enter your name"
          name="fullname"
        />
      </label>
      <div></div>
      <br /><br />

      <label for="gender" class="gender">
        Gender : <br />
        <input type="radio" name="gender" value="male" id="gender" />Male
      </label>
      <label for="gender">
        <input type="radio" name="gender" value="female" />Female
      </label>
      <label for="gender">
        <input type="radio" name="gender" value="other" />Other
      </label>
      <br /><br />

      <label for="mobile number">
        Mobile Number :
        <input
           type="tel" pattern="[0-9]{10}"
          title="enter only 0 to 9 number"
          name="number"
          id="mobilenumber"
        /> </label
      ><br /><br />

      <label for="email"
        >Email :
        <input
          type="email"
          placeholder="abc@xyzz.com"
          name="email"
          id="email"
        /> </label
      ><br /><br />
      <label for="password"
        >Password :
        <input
          type="password"
          placeholder="password"
          name="password"
          id="password"
        /> </label
      ><br /><br />

      <input type="submit" value="submit" />
      <input type="reset" />
    </form>

   <div>
  <% user.forEach((p)=>{%>
     <% if(p.fullname && p.fullname.trim() !== "") { %>
<h2>Submitted Data:</h2>
    <p><label for="">
      Name: <%= p.fullname %>
    </label> </p>
    <p>
      <label for="">Gender: <%= p.gender %></label></p>
    <p><label for="">Mobile: <%= p.number %></label></p>
    <p><label for="">Email: <%= p.email %></label></p>
     <% } %>
  <%}) %>
   </div>
<hr>
 
    </div>


  </body>
</html>







